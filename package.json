{
  "name": "studyhall",
  "version": "1.0.0",
  "description": "A gamified learning platform combining educational quizzes with fun game mechanics. Features multiple game modes, collectible characters, achievements, and real-time multiplayer.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"nodemon server.js\" \"cd client && npm start\"",
    "client": "cd client && npm start",
    "server": "nodemon server.js",
    "install-all": "npm install && cd client && npm install"
  },
  "keywords": [
    "education",
    "gamification",
    "quiz",
    "learning",
    "educational-game",
    "multiplayer",
    "real-time",
    "socket-io",
    "react",
    "nodejs",
    "blooket-alternative",
    "teacher-tools",
    "student-engagement",
    "game-based-learning",
    "interactive-learning"
  ],
  "author": "StudyHall Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/studyhall.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/studyhall/issues"
  },
  "homepage": "https://github.com/yourusername/studyhall#readme",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "socket.io": "^4.6.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1"
  }
}
